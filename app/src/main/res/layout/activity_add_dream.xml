<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dreamdate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dreamTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Dream Title"
            android:padding="15dp"
            android:textSize="17sp"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dreamDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Dream Description"
            android:padding="15dp"
            android:textSize="17sp"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/selectDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Date"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/dreamDatePicker"
        android:layout_width="328dp"
        android:layout_height="331dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/selectTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Dream Type"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"
        android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/dreamTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioDream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Sweet Dream"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                app:buttonTint="@color/primaryDarkColor" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioNightmare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nightmare"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                app:buttonTint="@color/primaryDarkColor" />
        </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveDreamButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lightpurple"
        android:minHeight="48dp"
        android:text="Save Dream"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"
        app:cornerRadius="8dp" />
</LinearLayout>
